<h1>PICTURES</h1>
<%= link_to "New Picture", "/pictures/new" %>

<p><%= "Number of pictures older than 1 month: " %><%= Picture.created_before(1.month.ago).count %></p>

<% @older_pictures.each do |picture| %>
	<p><%= picture.title %>, <%= picture.artist %></p>
	<%= link_to image_tag(picture.url), "/pictures/#{picture.id}" %>


<% end %>